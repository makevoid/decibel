%html{ lang: "it-IT" }
  %head
    %title Decibel Eventi
    %link{ rel: "stylesheet", href: "/css/main.css" }
    %script{ type: "text/javascript", src: "/js/ie_html5.js" }
  %body
    #container
      %header
        %h1
          / Decibel Eventi
          %a{ href: "/" }
            %img{ src: "/images/decibel_eventi_logo.png" }
      %nav
        - link_to "Home",             "/"
        - link_to "Eventi",           "/eventi"
        - link_to "Foto",  "https://www.facebook.com/decibel.eventi?sk=photos"
        - link_to "Storia",           "/storia"
        - link_to "Contatti",         "/contatti"
      .gallery_simple
        - photos_from("gallery").each_with_index do |photo, idx|
          %img{ class: "pos#{idx}", src: "/images/gallery/#{photo}" }
      %section.content= yield
    %script{ type: "text/javascript", src: "/js/vendor/jquery.js" }
    %script{ type: "text/javascript", src: "/js/app.js" }